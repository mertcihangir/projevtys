@model List<Student>

<div class="row">
	<div class="col-12">
        <div class="table-responsive table--no-card m-b-30">
            <table class="table table-borderless table-striped table-earning">
                <thead>
                    <tr>
                        <th>Öğrenci ID</th>
                        <th>Öğrenci Adı</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody id="courseUnselectedTable">
                    @foreach (Student student in Model)
                    {
                        <tr id="studentCourse_@student.Id">
                            <td>@student.Id</td>
                            <td>@student.Name @student.Surname</td>
                            <td>
                                <button type="submit" class="btn btn-success studentCourseConfirmBtn" data-id="@student.Id">Onayla</button>
                                <button type="submit" class="btn btn-danger studentCourseRejectBtn" data-id="@student.Id">Reddet</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
	</div>
</div>